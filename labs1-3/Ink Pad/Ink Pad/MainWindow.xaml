<Window x:Class="Ink_Pad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ink_Pad"
        mc:Ignorable="d"
        Title="Ink Pad" Height="450" Width="370" Background="LightGray">
    <Grid>
        <InkCanvas x:Name="inkCanvas1" Background="Yellow">


        </InkCanvas>
        <Button Name="button1" Content="Clear" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="button1_Click" Width="120"/>
        <Button Name="button2" Content="Close" HorizontalAlignment="Left" Margin="240,10,0,0" VerticalAlignment="Top" Click="button2_Click" Width="120"/>

    </Grid>
</Window>
