<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Button x:Name="setName" Content="Set Name" HorizontalAlignment="Left" Margin="40,72,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="retName" Content="Ret Name" HorizontalAlignment="Left" Margin="40,167,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.378,1.058" Click="retName_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="117,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="textBox_TextChanged"/>
        <Label x:Name="label1" Content="" HorizontalAlignment="Left" Margin="117,164,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.523,0.573"/>
        <Button Canvas.Left="10" Canvas.Top="10" Content="Click me" Height="23" Name="button3" Width="75" Click="button3_Click"/>
        <TextBox Width="170" Canvas.Left="90" Canvas.Top="12" Name="myTextBox" />        
    </Canvas>
</Window>
